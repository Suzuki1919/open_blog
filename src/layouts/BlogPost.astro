---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="ja">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
				min-height: 100vh;
			}
			.hero-image {
				width: 100%;
				height: 300px;
				background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
				display: flex;
				align-items: center;
				justify-content: center;
			}
			.prose {
				max-width: 700px;
				margin: 0 auto;
				padding: 3rem 2rem;
				color: var(--text-dark);
				line-height: 2.4;
				font-size: 1.15rem;
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
			}
			.prose p {
				margin-bottom: 2.2rem;
				text-align: justify;
				font-weight: 400;
			}
			.prose h2 {
				color: var(--primary-color);
				margin: 3.5rem 0 1.5rem 0;
				font-size: 1.25rem;
				font-weight: 600;
				letter-spacing: 0.5px;
			}
			.prose h3 {
				color: var(--primary-color);
				margin: 2.5rem 0 1rem 0;
				font-size: 1.1rem;
				font-weight: 600;
				letter-spacing: 0.3px;
			}
			.prose ul, .prose ol {
				margin-bottom: 2.2rem;
				padding-left: 2.5rem;
			}
			.prose li {
				margin-bottom: 1.2rem;
				line-height: 2.2;
				font-weight: 400;
			}
			.prose li strong {
				color: var(--primary-color);
				font-weight: 600;
			}
			.prose a {
				color: var(--primary-color);
				text-decoration: none;
				border-bottom: 1px solid var(--accent-color);
				transition: all 0.3s ease;
				font-weight: 500;
			}
			.prose a:hover {
				color: var(--accent-color);
				border-bottom-color: var(--primary-color);
			}
			.prose hr {
				border: none;
				height: 2px;
				background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
				margin: 4rem 0;
				border-radius: 1px;
				opacity: 0.8;
			}
			.title {
				margin-bottom: 3rem;
				padding: 2.5rem 2rem 2rem;
				text-align: center;
				background: white;
				border-radius: 12px;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
				margin-top: -4rem;
				position: relative;
				z-index: 1;
				margin-left: 2rem;
				margin-right: 2rem;
			}
			.title h1 {
				margin: 0 0 1.5rem 0;
				color: var(--primary-color);
				font-size: 2.4rem;
				font-weight: 700;
				line-height: 1.4;
				letter-spacing: 0.5px;
			}
			.date {
				margin-bottom: 0.8rem;
				color: var(--accent-color);
				font-weight: 600;
				font-size: 1.1rem;
			}
			.last-updated-on {
				font-style: italic;
				color: var(--text-muted);
				font-size: 0.95rem;
				margin-top: 0.5rem;
			}
			@media (max-width: 768px) {
				.prose {
					padding: 2rem 1rem;
					font-size: 1.05rem;
					line-height: 2.2;
				}
				.title {
					margin-left: 1rem;
					margin-right: 1rem;
					padding: 2rem 1.5rem 1.5rem;
					margin-top: -3rem;
				}
				.title h1 {
					font-size: 2rem;
					margin-bottom: 1.2rem;
				}
				.date {
					font-size: 1rem;
				}
				.prose h2 {
					font-size: 1.15rem;
					margin: 3rem 0 1.2rem 0;
				}
				.prose h3 {
					font-size: 1.05rem;
					margin: 2.2rem 0 0.8rem 0;
				}
				.prose p {
					margin-bottom: 2rem;
				}
				.prose ul, .prose ol {
					padding-left: 2rem;
					margin-bottom: 2rem;
				}
				.prose li {
					margin-bottom: 1rem;
					line-height: 2.0;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image"></div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
